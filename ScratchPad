let
    IPToNumber = (

    ip as text
    
    ) => let
 
    currentIP = ip,
    ListOfOctets = Text.Split(currentIP, "."),
    ListOfIndexItems = {0..3},

    IPNumber = List.Accumulate(
        ListOfIndexItems, 0, (state, current) => state +  
        Number.FromText(ListOfOctets{current}) * 
        Number.Power(256, 3 - current)
    )
in
    IPNumber


in
    IPToNumber
