WVDConnectionNetworkData
| join kind=inner (
    WVDErrors
) on CorrelationId
| where Type1 == "WVDErrors"
| where TimeGenerated >= ago(30d)
| extend Date = format_datetime(TimeGenerated, 'yyyy-MM-dd')
| extend Time = format_datetime(TimeGenerated, 'HH:mm')
| extend TimeKey = replace(":", "", Time)
| project TimeGenerated, Date, Time, TimeKey, CorrelationId, EstRoundTripTimeInMs, EstAvailableBandwidthKBps, UserName, Source, Code, CodeSymbolic, Message, Operation
